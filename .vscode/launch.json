{
    "version": "0.2.0",
    "configurations": [ 
        {
            "name": "Main",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Web",
            "type": "node-terminal",
            "request": "launch",
            "command": "pygbag --ume_block 0 --can_close 0 ${workspaceFolder}",
            "serverReadyAction": {
                "pattern": "\\bServing HTTP on 127\\.0\\.0\\.1 port (\\d+)",
                "uriFormat": "http://localhost:%s/#debug",
                "action": "openExternally"
            },
        }
    ]
}